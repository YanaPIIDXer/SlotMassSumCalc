<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlotMassSumCalc.Controls.ProbabilityView">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal" Spacing="30">
            <StackLayout Orientation="Horizontal">
                <Label Text="BIG" />
                <Label x:Name="BigProb" Text="{Binding StringFormat='1/{0:F1}', Path=BigProb}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="REG" />
                <Label x:Name="RegProb" Text="{Binding StringFormat='1/{0:F1}', Path=RegProb}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="合算" />
                <Label x:Name="TotalProb" Text="{Binding StringFormat='1/{0:F1}', Path=TotalProb}" />
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>
